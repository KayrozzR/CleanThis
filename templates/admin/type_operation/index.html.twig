{% extends 'base.html.twig' %}

{% block title %}Nos Services{% endblock %}

{% block body %}

<section class="home">
    <div class="text">
        <h1 style="padding-top: 25px">Nos Services</h1>

        <div class="row">
                <div class="col-md-2" style = "padding-bottom:40px; padding-top: 50px; width: 55%;">
                    <div class="card card-service">
                        <div class="card-body">
                        {% if type_operations|length > 0 %}
                            <h5 class="card-title titre">{{ type_operations[0].libelle }}</h5>
                        {% else %}
                            <p>Aucune opération trouvée</p>
                        {% endif %}
                        {% if type_operations|length > 0 %}
                            <p class="card-text tarif"> Tarif : {{ type_operations[0].tarif }} €</p><br>
                        {% else %}
                            <p>Aucune opération trouvée</p>
                        {% endif %}
                        <h5 class="card-title desc">Description : </h5>
                        {% if type_operations|length > 0 %}
                            <p class="card-text description">{{ type_operations[0].descriptif }}</p>
                        {% else %}
                            <p>Aucune opération trouvée</p>
                        {% endif %}
                            {% if app.user %}
                                {% if is_granted('ROLE_ADMIN') %}
                                    <a href="{{ path('app_type_operation_show', {'id': type_operation.id}) }}" class="btn btn-primary">Show</a>
                                    <a href="{{ path('app_type_operation_edit', {'id': type_operation.id}) }}" class="btn btn-secondary">Edit</a>
                                {% endif %}
                            {% endif %}
                        </div>
                    </div> 
                </div>

                <div class="col-md-6" style = "padding-bottom:40px; padding-top: 50px; width: 55%;">
                    <div class="card card-service1">
                        <div class="card-body">
                        {% if type_operations|length > 0 %}
