                                    <a href="{{ path('app_type_operation_edit', {'id': type_operation.id}) }}" class="btn btn-secondary">Edit</a>
                                {% endif %}
                            {% endif %}
                        </div>
                    </div>
                </div>
        </div>

        {% if app.user %}
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('app_type_operation_new') }}" class="btn btn-success">Create new</a>
            {% endif %}
        {% endif %}
    </div>
</section>

{% endblock %}
