{% extends 'base.html.twig' %}

{% block title %}Nos Services{% endblock %}

{% block body %}

<section class="home">
    <div class="text">
        <h1 style="padding-top: 25px">Nos Services</h1>
        {% if app.user %}
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('app_type_operation_new') }}" class="create1"> + Ajouter un Services</a>
            {% endif %}
        {% endif %}
        <div class="row">
            {% set colors = ['#ff0000', '#00ff00', '#0000ff', '#ffff00', '#ff00ff', '#00ffff'] %}
            {% for index, type_operation in type_operations %}
                {% set color = colors[index % colors|length] %}
                <div class="col-md-6" style="margin-left: 150px; padding-bottom: 40px; padding-top: 50px; width: 80%;">
                    <div style="float: left;">
                        <img src="{{ asset('images/logo.png') }}" alt="Image" style="width: 316px; height: 248px; border-radius: 6px">
                    </div>
                    <div class="card card-service" style="background-color: {{ color }};">
                        <div class="card-body">
                            <h5 class="card-title titre">{{ type_operation.libelle }}</h5>
                            <p class="card-text tarif"> Tarif : {{ type_operation.tarif }} â‚¬</p><br>
                            <h5 class="card-title desc">Description : </h5>
                            <p class="card-text description">{{ type_operation.descriptif }}</p>
                            {% if app.user %}
                                {% if is_granted('ROLE_ADMIN') %}
                                    <a class="edit-type" href="{{ path('app_type_operation_edit', {'id': type_operation.id}) }}"><i class='bx bx-edit' style='font-size: 40px;'></i></a>
                                {% endif %}
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>

{% endblock %}