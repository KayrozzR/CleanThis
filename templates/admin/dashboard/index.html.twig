{% include "_partials/_sidebar.html.twig" %}

{% block body %}
<section class='home'>
	<div class='text'>
        <div class="chart-container">
           <canvas id="CA/service"></canvas>
        </div>
        <div class="chart-container">
           <canvas id="CA"></canvas>
        </div>
		<div class="chart-container">
            <canvas id="usersChart" aria-label="Chart" role="img"></canvas>
            </div> 
            <div id="users" data-user-names="{{ usersEmployee }}"></div>
            <div>
            <label for="user-select">Sélectionnez un utilisateur :</label>
            <select id="user-select">
                <option value="">Tous les utilisateurs</option>
                {% for user in users %}
                    <option value="{{ user.id }}">{{ user.lastname }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
</section>

{% endblock %}

{% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script src="{{ asset('js/dashboard.js') }}" defer></script>

<script>
    const ctx = document.getElementById('CA/service');

    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: {{ chiffreAffairesParType|keys|json_encode|raw }},
            datasets: [{
                label: 'Chiffre d\'affaires par catégorie',
                data: [
                    {% for value in chiffreAffairesParType %}
                        {{ value }},
                    {% endfor %}
                ],
                backgroundColor: 'rgba(255, 99, 132, 0.2)',
                borderColor: 'rgba(255, 99, 132, 1)',
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>

<script>
    const ctx1 = document.getElementById('CA');

    new Chart(ctx1, {
        type: 'pie',
        data: {
            labels: {{ chiffreAffaire|keys|json_encode|raw }},
            datasets: [{
                label: 'Chiffre d\'affaire de l\'entreprise',
                data: [
                    'chiffreAffaire'
                ],
                backgroundColor: 'rgba(255, 99, 132, 0.2)',
                borderColor: 'rgba(255, 99, 132, 1)',
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>

<script>
        document.addEventListener('DOMContentLoaded', function() {
            let usersEmployee = JSON.parse(document.querySelector("#users").getAttribute('data-user-names'));
