{% extends 'basebis.html.twig' %}

{% block title %}Formulaire de Contact{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <p>
                <u>Contacter Clean this / Pour accéder rapidement à nos services</u>
            </p>
            <div class="card">
                <div class="col-md-6 offset-md-3">
                    <h1>Contactez-nous</h1>
                    {{ form_start(form) }}
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_row(form.firstName, {'attr': {'class': 'form-control', 'placeholder': 'Prénom'}}) }}
                            </div>
                            <div class="mb-3">
                                {{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder': 'E-mail'}}) }}
                            </div>
                            <div class="mb-3">
                                {{ form_row(form.address, {'attr': {'class': 'form-control', 'placeholder': 'Adresse', 'id': 'address'}}) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_row(form.lastName, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
                            </div>
                            <div class="mb-3">
                                {{ form_row(form.phone, {'attr': {'class': 'form-control', 'placeholder': 'Téléphone'}}) }}
                            </div>
                            <div class="mb-3">
                                {{ form_row(form.postalCode, {'attr': {'class': 'form-control', 'placeholder': 'Code Postal'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.city, {'attr': {'class': 'form-control', 'placeholder': 'Ville'}}) }}
                    </div>
                    <div class="mb-3">
                        <label for="{{ form.contactMethod.vars.id }}" class="form-label">Comment pouvons-nous vous contacter ?</label>
                        {{ form_widget(form.contactMethod, {'attr': {'class': 'form-select'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.message, {'attr': {'class': 'form-control', 'placeholder': 'Message'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d27435.858582873625!2d3.1430509493233343!3d50.6887670171371!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47c32891f6ff8a69%3A0x40af13e816459b0!2s59100%20Roubaix!5e1!3m2!1sfr!2sfr!4v1710755639266!5m2!1sfr!2sfr" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </div>
{% endblock %}